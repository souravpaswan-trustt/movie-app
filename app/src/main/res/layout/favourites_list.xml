<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/favouriteListRelativeLayout"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/favouriteMovieImageView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/movieDetailsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/favouriteMovieImageView"
        android:layout_toLeftOf="@+id/removeFavouriteButton"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favouriteMovieTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:text="Movie Title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favouriteMovieReleaseImageView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="?attr/releaseDateIconDrawable" />

            <TextView
                android:id="@+id/favouriteMovieReleaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Release Date"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favouriteMovieRatingStarImageView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="?attr/ratingIconDrawable" />

            <TextView
                android:id="@+id/favouriteMovieRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Rating"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/removeFavouriteButton"
        android:layout_width="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:src="?attr/removeFavouriteIconDrawable"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
